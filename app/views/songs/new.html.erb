<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </p>
  <p>
    <%= f.label :genre_name %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </p>
  <input name="song[notes_content][]" id="song_notes_1">
  <input name="song[notes_content][]" id="song_notes_2">
  <input name="song[notes_content][]" id="song_notes_3">
  <br />

  <%= f.submit %>
<% end %>
